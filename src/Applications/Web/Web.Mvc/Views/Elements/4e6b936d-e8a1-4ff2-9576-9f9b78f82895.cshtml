@using Riverside.Cms.Applications.Web.Mvc.Extensions
@using Riverside.Cms.Services.Element.Client

@model IElementViewModel<SocialBarElementSettings, SocialBarElementContent>

<div class="rcms-contact">

    @if (Model.View.Settings.DisplayName != null)
    {
        <h2>@Model.View.Settings.DisplayName</h2>
    }

    @if (Model.View.Settings.Preamble != null)
    {
        <p class="rcms-preamble">@Html.FormatMultiline(Model.View.Settings.Preamble)</p>
    }

    <address>
        <ul>
            @if (Model.View.Content.TwitterUrl != null)
            {
                <li class="rcms-contact-twitter"><a href="@Model.View.Content.TwitterUrl" target="_blank"><i class="fa fa-fw fa-twitter-square" aria-hidden="true"></i></a><a href="@Model.View.Content.TwitterUrl" target="_blank">Twitter</a></li>
            }
            @if (Model.View.Content.FacebookUrl != null)
            {
                <li class="rcms-contact-facebook"><a href="@Model.View.Content.FacebookUrl" target="_blank"><i class="fa fa-fw fa-facebook-square" aria-hidden="true"></i></a><a href="@Model.View.Content.FacebookUrl" target="_blank">Facebook</a></li>
            }
            @if (Model.View.Content.LinkedInCompanyUrl != null)
            {
                <li class="rcms-contact-linkedin-company"><a href="@Model.View.Content.LinkedInCompanyUrl" target="_blank"><i class="fa fa-fw fa-linkedin-square" aria-hidden="true"></i></a><a href="@Model.View.Content.LinkedInCompanyUrl" target="_blank">LinkedIn</a></li>
            }
            @if (Model.View.Content.LinkedInPersonalUrl != null)
            {
                <li class="rcms-contact-linkedin-personal"><a href="@Model.View.Content.LinkedInPersonalUrl" target="_blank"><i class="fa fa-fw fa-linkedin-square" aria-hidden="true"></i></a><a href="@Model.View.Content.LinkedInPersonalUrl" target="_blank">LinkedIn</a></li>
            }
            @if (Model.View.Content.InstagramUrl != null)
            {
                <li class="rcms-contact-instagram"><a href="@Model.View.Content.InstagramUrl" target="_blank"><i class="fa fa-fw fa-instagram" aria-hidden="true"></i></a><a href="@Model.View.Content.InstagramUrl" target="_blank">Instagram</a></li>
            }
            @if (Model.View.Content.YouTubeChannelUrl != null)
            {
                <li class="rcms-contact-youtube"><a href="@Model.View.Content.YouTubeChannelUrl" target="_blank"><i class="fa fa-fw fa-youtube-square" aria-hidden="true"></i></a><a href="@Model.View.Content.YouTubeChannelUrl" target="_blank">YouTube</a></li>
            }
            @if (Model.View.Settings.Email != null)
            {
                <li class="rcms-contact-email"><a href="mailto:@Model.View.Settings.Email"><i class="fa fa-fw fa-envelope-square" aria-hidden="true"></i></a><a href="mailto:@Model.View.Settings.Email">@Model.View.Settings.Email</a></li>
            }
            @if (Model.View.Settings.Address != null)
            {
                <li class="rcms-contact-address"><i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>@Model.View.Settings.Address</li>
            }
            @if (Model.View.Settings.TelephoneNumber1 != null)
            {
                <li class="rcms-contact-telephone1"><i class="fa fa-fw fa-phone-square" aria-hidden="true"></i>@Model.View.Settings.TelephoneNumber1</li>
            }
            @if (Model.View.Settings.TelephoneNumber2 != null)
            {
                <li class="rcms-contact-telephone2"><i class="fa fa-fw fa-phone-square" aria-hidden="true"></i>@Model.View.Settings.TelephoneNumber2</li>
            }
        </ul>
    </address>

</div>